@using YourBlog.Models
@model List<ArticleViewModel>
@section Sprites{
     <link rel="stylesheet" href="~/css/Profile.css" />
}
<ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-link active" href="#">My Articles</a> <!-- активная ссылка -->
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Admin/ChangeArticle">Create Article</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Admin/AddCategory">Categories</a>
    </li>
</ul>
<h2>My Articles</h2>
@foreach (var article in Model)
{
    <div class="card" style="width: 100%;">
        <p></p>
        <div class="card-body">
            <div class="info-article">
                <h5 class="card-title">@article.Title</h5>
                <p class="card-text">@article.Description</p>
                <a href="/Admin/ChangeArticle?idArticle=@article.Id">Edit</a>
                <a href="/Admin/DeleteArticle?articleId=@article.Id">Delete</a>
            </div>
            <img class="img-thumbnail" style="width: 20%;" src="@article.Image" alt="Card image cap">
        </div>
    </div>
}
